<% provide(:title, '日記編集') %>
<h1>日記編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@diary)  do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' %>

      <%= f.label :shared_with, '公開範囲' %><br>
      <label><%= f.radio_button :shared_with, SHARED_WITH_OPEN,
                                              class: 'shared-with' %>全体</label>

      <label><%= f.radio_button :shared_with, SHARED_WITH_FRIENDS_ONLY,
                                              class: 'shared-with' %>友達のみ</label>

      <%= f.submit "投稿", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
