<% provide(:title, "メンバー一覧") %>
<div class="row">
  <aside class="col-md-3">
    <section>
      <%= render 'shared/user_info' %>
    </section>
  </aside>
  <div class="col-md-9">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">友達一覧</h3>
      </div>
      <div class="panel-body">
        <div class="users">
          <%= render @users %>
        </div>
        <%= will_paginate @users %>
      </div>
    </div>
  </div>
</div>
