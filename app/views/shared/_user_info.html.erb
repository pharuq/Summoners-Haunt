<div class="panel panel-default">
  <div class="panel-body">
    <%= show_big_thumb(@user) %>
  </div>
  <div class="panel-footer">
    <h2 class="user_name"><%= link_to @user.name, @user %></h2>
    <ul class="user-info-icon-wrap">
      <% if current_user?(@user) %>
        <%= link_to new_diary_path do %>
          <li class="user-info-icon border-right">
            <%= image_tag('/new_diary_icon.png', alt: "diary", class: "center-block") %>
          </li>
        <% end %>
        <%= link_to messages_users_path do %>
          <li class="user-info-icon">
            <%= image_tag('/message_index_icon.png', alt: "message_index", class: "center-block") %>
          </li>
        <% end %>
      <% else %>
        <%= render 'shared/follow_form' %>
        <%= link_to message_user_path(@user) do %>
          <li class="user-info-icon">
            <%= image_tag('/message_icon.png', alt: "message", class: "center-block") %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>

  <%= render 'shared/user_friends' %>

  <%= render 'shared/user_communities' %>
