<%= form_for(current_user.passive_pending_friendships.find_by(from_user_id: @user.id),
                                                                html: { class: "follow-accept-icon" },remote: true) do |f| %>
  <div><%= hidden_field_tag :to_user_id, @user.id %></div>
  <%= button_tag type: :submit, class: "change-submit", data: { confirm: "承認しますか？" } do %>
    <%= image_tag "/static_images/frined_add_icon.png", alt: "add_friend", class: "" %>
  <% end %>
<% end %>

<%= form_for(current_user.get_friendship_id(@user).first,
                                                    html: { method: :delete },
                                                    remote: true) do |f| %>
