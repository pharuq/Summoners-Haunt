<% provide(:title, '日記編集') %>
<div class="row">
  <aside class="col-md-3">
    <section>
      <%= render 'shared/user_info' %>
    </section>
  </aside>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">日記編集</h3>
      </div>
      <div class="panel-body">
        <%= form_for(@diary)  do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :title, "タイトル" %>
        <%= f.text_field :title, class: 'form-control' %>

        <%= f.label :content, "内容" %>
        <%= f.text_area :content, rows: 8, class: 'form-control' %>

        <%= f.label :shared_with, '公開範囲' %><br>
        <label><%= f.radio_button :shared_with, SHARED_WITH_OPEN,
                                                class: 'shared-with' %>全体</label>
        <label><%= f.radio_button :shared_with, SHARED_WITH_FRIENDS_ONLY,
                                                class: 'shared-with' %>友達のみ</label>

        <%= f.submit "投稿", class: "btn btn-primary" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
