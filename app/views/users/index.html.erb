<% provide(:title, 'Search') %>
<div class="row">
  <aside class="col-md-3">
    <section>
      <%= render 'shared/user_info' %>
    </section>
  </aside>
  <div class="col-md-9">
    <h3>友達検索</h3>
    <%= form_tag users_path, method: 'get' do %>

      <%= label_tag :name, "name" %>
      <%= text_field_tag 'search[name]', params[:search][:name] %>

      <%= label_tag :role, "role" %>
      <%= text_field_tag 'search[role]', params[:search][:role] %>

      <%= label_tag :profile, "profile" %>
      <%= text_field_tag 'search[profile]', params[:search][:profile] %>

      <%= submit_tag "検索", class: "btn btn-primary" %>
    <% end %>
    <%= render @users %>
  </div>
</div>
