<% provide(:title, 'Search') %>
<div class="row">
  <aside class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">検索条件</h3>
        </div>
        <div class="panel-body">
          <%= search_form_for @q do |f| %>

            <%= f.label :name_cont, "コミュニティ名" %>
            <%= f.search_field :name_cont %>

            <%= f.label :content_cont, "キーワード" %>
            <%= f.search_field :content_cont %>

            <%= f.submit "検索", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
      <%= link_to "コミュニティ作成", new_community_path, class: "message btn btn-primary" %>
  </aside>

  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">コミュニティ一覧</h3>
      </div>
      <div class="panel-body">
        <ul class="communities">
          <%= render @communities %>
        </ul>
      </div>
    </div>
  </div>
</div>
