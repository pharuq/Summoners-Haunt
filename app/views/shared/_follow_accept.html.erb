  <%= button_tag type: :submit, class: "change-submit", data: { confirm: "申請を拒否しますか？" } do %>
    <%= image_tag "/static_images/frined_sub_icon.png", alt: "sub_friend", class: "" %>
  <% end %>
<% end %>
