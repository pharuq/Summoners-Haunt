<% provide(:title, 'Home') %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-3">
      <section>
        <%= render 'shared/user_info' %>
      </section>
    </aside>
    <div class="col-md-6">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">日記フィード</h3>
        </div>
        <div class="panel-body">
          <%= render 'shared/feed' %>
        </div>
      </div>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">コミュニティフィード</h3>
        </div>
        <div class="panel-body">
          <%= render 'shared/feed_topics' %>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="panel panel-danger rss">
        <div class="panel-heading">
          <h3 class="panel-title">最新ニュース（公式）</h3>
        </div>
        <div class="panel-body">
          <%= render 'shared/rss' %>
        </div>
      </div>
    </div>
  </div>

<% else %>
  <div class="center jumbotron">
    <h1>Summoner's Hauntへようこそ！</h1>
  </div>

  <div class="row">
    <div class="col-md-3  col-md-offset-9">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">ログイン</h3>
        </div>
        <div class="panel-body">
          <%= form_for(:session, url: login_path) do |f| %>

            <%= f.label :email, "Eメール" %>
            <%= f.email_field :email, class: 'form-control' %>

            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, class: 'form-control' %>

            <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span>ログイン状態を保持する</span>
            <% end %>

            <%= f.submit "ログイン", class: "btn btn-primary" %>
          <% end %>

          <p>初めての方は <%= link_to "新規会員登録", signup_path %></p>
          <p>パスワードを忘れた場合は <%= link_to "こちら", new_password_reset_path %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
