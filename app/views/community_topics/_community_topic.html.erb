<li id="community_topic-<%= community_topic.id %>">
  <div class="title">
    <span><%= link_to truncate(community_topic.title, length: 50),
                        community_community_topic_path(@community, community_topic) %></span>
  </div>
  <div class="content">
    <%= truncate(community_topic.content, length: 75) %>
  </div>
  <div class="mini_thumb">
    <%= show_mini_thumb(community_topic.user) %>
    <%= link_to community_topic.user.name, community_topic.user %>
    <span class="timestamp">
      <%= community_topic.updated_at.to_s(:datetime) %>
    </span>
  </div>
</li>
